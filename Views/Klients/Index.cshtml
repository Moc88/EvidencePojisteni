@model IEnumerable<EvidencePojisteni.Models.Klient>


<div class="hlavni">

    <h1>Výpis klientů</h1>

    <p class="paragraph-center">
        <a asp-action="Create">Vytvořit nového klienta</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prijmeni)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jmeno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    Akce
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prijmeni)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jmeno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>


                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Upravit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detailly</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Smazat</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>